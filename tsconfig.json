  "compilerOptions": {
    "rootDir": "src",
    "outDir": "bin",
    "strict": true,
    "target": "ES2022",
    "module": "commonjs",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
